<script is:inline>
  const menuToggle = document.getElementById("menu-toggle");
  const navLinks = document.querySelector(".nav-links");

  menuToggle.addEventListener("click", () => {
    navLinks.classList.toggle("mobile-active");
  });

  const dropdowns = document.querySelectorAll(".dropdown > a");
  dropdowns.forEach((link) => {
    link.addEventListener("click", (e) => {
      if (window.innerWidth <= 900) {
        e.preventDefault();
        link.parentElement.classList.toggle("open");
      }
    });
  });
</script>

<style>
  .navbar {
    display: flex;
    align-items: center;
    justify-content: space-between;
    background: white;
    padding: 10px -50px;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 10;
  }

  .logo img {
    height: 55px;
    padding: 20px;
  }

  .nav-links {
    list-style: none;
    display: flex;
    gap: 20px;
  }

  .nav-links li {
    position: relative;
  }

  .nav-links a {
    text-decoration: none;
    color: #d91c24;
    font-weight: bold;
    font-size: 20px;
  }

  .dropdown-menu {
    display: none;
    position: absolute;
    top: 100%;
    left: 0;
    background: white;
    list-style: none;
    padding: 10px 0;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  .dropdown-menu li a {
    display: block;
    padding: 10px 20px;
    color: #333;
    white-space: nowrap;
  }
  .dropdown-menu li a:hover {
    background-color: #eee8e8;
  }
  .dropdown:hover .dropdown-menu {
    display: block;
  }

  .btn-voluntariado {
    background: #d91c24;
    color: white;
    padding: 10px 20px;
    border-radius: 20px;
    text-decoration: none;
    font-weight: bold;
    font-size: 20px;
    margin: 0 30px;
  }

  .btn-voluntariado:hover {
    background: #bd131c;
  }

  .menu-toggle {
    display: none;
    font-size: 30px;
    cursor: pointer;
    color: #d91c24;
  }

  /* --- Responsive --- */
  @media (max-width: 900px) {
    .nav-links,
    .btn-voluntariado {
      display: none;
      order: -1;
    }

    .navbar {
      justify-content: space-between;
    }

    .menu-toggle {
      display: block;
      margin-right: 10px;
      margin-bottom: 15px;
    }

    .nav-links.mobile-active {
      display: flex;
      flex-direction: column;
      position: absolute;
      top: 70px;
      left: 0;
      width: 100%;
      background: white;
      gap: 0;
    }

    .nav-links.mobile-active li {
      text-align: left;
      border-bottom: 1px solid #eee;
    }

    .nav-links.mobile-active li a {
      padding: 15px 20px;
      display: block;
    }

    .dropdown-menu {
      position: static;
      box-shadow: none;
      padding: 0;
    }

    .dropdown:hover .dropdown-menu {
      display: none;
    }

    .dropdown.open .dropdown-menu {
      display: block;
    }
  }
</style>
